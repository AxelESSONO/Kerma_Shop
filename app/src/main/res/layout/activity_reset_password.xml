<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg_img"
    tools:context=".CommonActivity.ResetPasswordActivity">

    <include
        android:id="@+id/toolbarForSeller"
        layout="@layout/toolbar_layout" />

    <EditText
        android:id="@+id/phone_number_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarForSeller"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corners_edittext_dark"
        android:hint="Saisir votre numéro de téléphone"
        android:inputType="number"
        android:padding="14dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_question"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="Répondre aux questions de sécurité suivantes?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/prefered_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_questions"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corners_edittext_dark"
        android:gravity="center"
        android:hint="Votre tante préférée?"
        android:inputType="text"
        android:padding="14dp" />

    <EditText
        android:id="@+id/color_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prefered_question"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corners_edittext_dark"
        android:gravity="center"
        android:hint="Votre couleur préférée?"
        android:inputType="text"
        android:padding="14dp" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/come_back"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corners_bouton"
        android:padding="4dp"
        android:text="Vérification"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <Button
        android:id="@+id/come_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corners_bouton"
        android:gravity="center"
        android:text="Retour"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>